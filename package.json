{
  "name": "mdview",
  "version": "0.2.7",
  "description": "Beautiful Chrome extension for viewing Markdown files with themes, syntax highlighting, and interactive Mermaid diagrams",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "node scripts/update-manifest-version.js && tsc && vite build && node scripts/fix-manifest.js",
    "export:docx": "tsx scripts/export-docx-mermaid-cli.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@jamesainslie/docx": "^9.5.1-svg.1",
    "dompurify": "^3.0.6",
    "highlight.js": "^11.9.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "panzoom": "^9.4.3"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.0",
    "@crxjs/vite-plugin": "^2.0.0",
    "@types/chrome": "^0.0.254",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.12.1",
    "playwright": "^1.48.0",
    "prettier": "^3.1.0",
    "puppeteer": "^24.31.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesainslie/mdview.git"
  },
  "keywords": [
    "markdown",
    "viewer",
    "chrome-extension",
    "mermaid",
    "syntax-highlighting",
    "themes"
  ],
  "author": "James Ainslie",
  "license": "MIT",
  "lint-staged": {
    "{src,tests}/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
